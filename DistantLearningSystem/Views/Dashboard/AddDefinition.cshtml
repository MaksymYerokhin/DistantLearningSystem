@using DistantLearningSystem.Models.LogicModels.Managers
@{
    ViewBag.Title = "Добавить определение";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
    var user = DataManager.DefineUser(Context);
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить понятие</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
        @using (Html.BeginForm("ManageDefinitionAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <input type="hidden" name="conceptId" value="@ViewBag.ConceptId" />
                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Определение</label>
                    <div class="col-md-2">
                        <input class="form-control" id="text" name="text" type="text" placeholder="Определение" required="required">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.AddButton(Html.ActionLink("Назад", "Concept", "Search", new { id = ViewBag.ConceptId }))
                    </div>
                </div>
            </div>
        }
    </div>
</div>