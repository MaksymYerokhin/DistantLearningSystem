@using DistantLearningSystem.Models.LogicModels.Managers
@using DistantLearningSystem.Models.DataModels
@{
    ViewBag.Title = "Добавить понятие";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
    var classificationTypes = ClassTypes.GetSourceTypes();
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить понятие</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
        @using (Html.BeginForm("ManageClassificationAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Основание классификации</label>
                    <div class="col-md-2">
                        <input class="form-control" id="Base" name="Base" type="text" placeholder="Основание" required="required">
                    </div>
                </div>

                @HtmlManager.DropDownList(Html, "Вид", "type", classificationTypes, textField:"Value")

                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.AddButton(Html.ActionLink("Назад", "Classifications", "Search"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>