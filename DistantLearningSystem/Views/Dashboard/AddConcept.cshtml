@using DistantLearningSystem.Models.LogicModels.Managers
@{
    ViewBag.Title = "Добавить понятие";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить понятие</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
        @using (Html.BeginForm("ManageConceptAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Имя</label>
                    <div class="col-md-2">
                        <input class="form-control" id="name" name="name" type="text" placeholder="Имя" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Аббревиатура</label>
                    <div class="col-md-2">
                        <input class="form-control" id="abbreviation" name="abbreviation" type="text" placeholder="Аббревиатура">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Определение</label>
                    <div class="col-md-2">
                        <input class="form-control" id="definition" name="definition" type="text" placeholder="Определение" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Изображение</label>
                    <div class="col-md-2">
                        @HtmlManager.ImageUpload()
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.AddButton(Html.ActionLink("Назад", "GetConcepts", "Search"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>